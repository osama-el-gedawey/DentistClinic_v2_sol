@model PatientViewModel;
<tr>
    <td class="d-none"></td>
    <td class="d-flex align-items-center">
        <!--begin:: Patient -->
        <div class="symbol  symbol-50px overflow-hidden me-3">
            <a href="/Patients/Details/@Model.Id">
                <div class="symbol-label">
                    @if (!String.IsNullOrEmpty(Model.ProfilePicture?.ToString()))
                    {
                        <img src="data:image /*;base64,@(Convert.ToBase64String(Model?.ProfilePicture!))" alt="Cover" class="w-100">
                    }
                    else
                    {
                        <img src="~/assets/images/user.jpg" alt="Cover" class="w-100">
                    }
                </div>
            </a>
        </div>
        <!--end::Patient-->
        <!--begin::Patient details-->
        <div class="d-flex flex-column">
            <a href="/Patients/Details/@Model?.Id" class="text-gray-800 text-hover-primary fw-bolder mb-1">@Model?.FullName</a>
            <span>@Model?.PhoneNumber</span>
        </div>
        <!--begin::Patient details-->
    </td>
    <td>@Model?.Gender</td>
    <td> @Model?.BirthDate.ToString("MMMM dd, yyyy")</td>
    <td>
        <span class="js-status badge badge-light-@(Model!.IsDeleted ? "danger" : "success") me-auto">
            @(Model!.IsDeleted ? "Deleted" : "Available")
        </span>
    </td>
    <td class="text-center">
        <a href="#" class="btn btn-light btn-active-light-primary btn-flex btn-center btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
            Actions
            <!--begin::Svg Icon | path: /var/www/preview.keenthemes.com/keenthemes/metronic/docs/core/html/src/media/icons/duotune/arrows/arr072.svg-->
            <span class="svg-icon svg-icon-muted svg-icon-5">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor" />
                </svg>
            </span>
            <!--end::Svg Icon-->
        </a>
        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 py-4" data-kt-menu="true" style="width:200px">
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a href="javascript:;" class="menu-link px-3 js-toggle-status" data-url="/Patients/ToggleStatus/@Model.Id">
                    Make it Available
                </a>
            </div>
            <!--end::Menu item-->
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a asp-action="Delete" asp-controller="Patients" asp-route-id="@Model.Id" class="menu-link px-3">
                    Delete Permanently
                </a>
            </div>
            <!--end::Menu item-->
        </div>
    </td>
</tr>