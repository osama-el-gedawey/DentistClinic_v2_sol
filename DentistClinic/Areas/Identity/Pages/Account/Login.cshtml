@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_AthuntecationLayout.cshtml";

}

<div class="main-wrapper login-body">
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-lg-6 login-wrap">
                <div class="login-sec">
                    <div class="log-img">
                        <img class="img-fluid" src="~/images/register/login-02.png" alt="Logo">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 login-wrap-bg">
                <div class="login-wrapper">
                    <div class="loginbox">
                        <div class="login-right">
                            <div class="login-right-wrap">
                                <div class="account-logo">
                                    <a href="index.html"><img src="~/images/register/login-logo.png" alt></a>
                                </div>
                                <h2>Getting Started</h2>
                                <form id="LoginForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="input-block">
                                        <label asp-for="Input.Email" class="required"></label>
                                        <input asp-for="Input.Email" class="form-control">
                                        <span asp-validation-for="Input.Email" class="text-danger px-2"></span>
                                    </div>
                                    <div class="input-block">
                                        <label asp-for="Input.Password" class="required"></label>
                                        <input asp-for="Input.Password" class="form-control">
                                        <span asp-validation-for="Input.Password" class="text-danger px-2"></span>
                                    </div>
                                    <div class="forgotpass">
                                        <div class="remember-me">
                                            <label class="custom_check mr-2 mb-0 d-inline-flex remember-me">
                                                Remember me
                                                <input type="checkbox" name="radio" asp-for="Input.RememberMe">
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <a href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="input-block login-btn">
                                        <button class="btn btn-primary btn-block" type="submit">Sign up</button>
                                    </div>
                                </form>
                                <div class="next-sign d-flex justify-content-center">
                                    <p class="account-subtitle text-center">Already have account? <a asp-page="/Account/Register">Register</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}